<form action='@Url.Action("GuardarPaquete")'>
<select name="destino">
    @for(int i=0;i<ViewBag.ListaDestinos;i++)
    {<option value=@i>@ViewBag.ListaDestinos[i]</option>}
</select>

    @foreach (string aereo in ViewBag.ListaAereos)
    {<img src="~/imgs/aerolineas/@aereo">
    }
    <input type="number" name="aereo" min="1" max="10">


    @foreach (string hotel in ViewBag.ListaHoteles)
    {<img src="~/imgs/hoteles/@hotel">
    }
    <input type="number" name="hotel" min="1" max="10">
    
    @foreach (string excursion in ViewBag.ListaExcursiones)
    {<img src="~/imgs/excursiones/@excursion">
    }
    <input type="number" name="excursion" min="1" max="10">

<input type="submit" value="Crear Paquete">
</form>
